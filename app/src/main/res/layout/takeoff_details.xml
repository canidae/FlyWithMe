<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/takeoffDetailsLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true" >

    <TextView
        android:id="@+id/takeoffDetailsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/takeoffDetailsWindroseNorth"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/takeoffDetailsCoordAslHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/takeoffDetailsName"
        android:layout_below="@+id/takeoffDetailsName"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignBottom="@+id/takeoffDetailsWindroseNorth" />

    <TextView
        android:id="@+id/takeoffDetailsDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:scrollbars="vertical"
        android:autoLink="web"
        android:text="@string/app_name"
        android:layout_above="@+id/scheduleTimeLabel"
        android:layout_below="@+id/takeoffDetailsCoordAslHeight"
        android:textColor="@android:color/white"/>

    <ImageView
        android:id="@+id/takeoffDetailsWindroseNorth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/windrose_north" />

    <ImageView
        android:id="@+id/takeoffDetailsWindroseNorthwest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/takeoffDetailsName"
        android:src="@mipmap/windrose_northwest" />

    <ImageView
        android:id="@+id/takeoffDetailsWindroseWest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/takeoffDetailsName"
        android:src="@mipmap/windrose_west" />

    <ImageView
        android:id="@+id/takeoffDetailsWindroseSouthwest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/takeoffDetailsName"
        android:src="@mipmap/windrose_southwest" />

    <ImageView
        android:id="@+id/takeoffDetailsWindroseSouth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/takeoffDetailsName"
        android:src="@mipmap/windrose_south" />

    <ImageView
        android:id="@+id/takeoffDetailsWindroseSoutheast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/takeoffDetailsName"
        android:src="@mipmap/windrose_southeast" />

    <ImageView
        android:id="@+id/takeoffDetailsWindroseEast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/takeoffDetailsName"
        android:src="@mipmap/windrose_east" />

    <ImageView
        android:id="@+id/takeoffDetailsWindroseNortheast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/takeoffDetailsName"
        android:src="@mipmap/windrose_northeast" />

    <ImageView
        android:id="@+id/takeoffDetailsWindroseCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/takeoffDetailsName"
        android:src="@mipmap/windrose_circle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/graph_text"
        android:id="@+id/scheduleTimeLabel"
        android:layout_above="@+id/takeoffDetailsFlyScheduleChart"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/takeoffDetailsWindroseNorth"
        android:gravity="center" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/takeoffDetailsFlyScheduleChart"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:minHeight="150dp" />

</RelativeLayout>