<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/takeoffListEntryLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/takeoffListEntryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/takeoffListEntryInfo"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/takeoffListEntryInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/takeoffListEntryName"
        android:layout_toLeftOf="@+id/takeoffListEntryWindroseNorth"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/takeoffListEntryWindroseNorth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/windrose_north" />

    <ImageView
        android:id="@+id/takeoffListEntryWindroseNorthwest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/windrose_northwest" />

    <ImageView
        android:id="@+id/takeoffListEntryWindroseWest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/windrose_west" />

    <ImageView
        android:id="@+id/takeoffListEntryWindroseSouthwest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/windrose_southwest" />

    <ImageView
        android:id="@+id/takeoffListEntryWindroseSouth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/windrose_south" />

    <ImageView
        android:id="@+id/takeoffListEntryWindroseSoutheast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/windrose_southeast" />

    <ImageView
        android:id="@+id/takeoffListEntryWindroseEast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/windrose_east" />

    <ImageView
        android:id="@+id/takeoffListEntryWindroseNortheast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/windrose_northeast" />

    <ImageView
        android:id="@+id/takeoffListEntryWindroseCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/windrose_circle" />

</RelativeLayout>